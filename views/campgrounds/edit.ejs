<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <header>
            <h1 style="text-align: center;">Edit <%= campground.name %> </h1>
        </header>    

        <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST" style="width: 30%; margin:25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="image_url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.price%>" name="price">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.description%>" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>

        </form>

        <form action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST" style="width: 30%; margin:-20px auto;"> 
            <button class="btn btn-lg btn-block btn-danger">Delete</button>
        </form>

        <a href="/campgrounds/<%= campground.id %>"> Go Back </a>
    </div>
</div>

<%- include("../partials/footer") %>
