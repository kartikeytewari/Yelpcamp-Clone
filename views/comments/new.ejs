<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <header>
            <h1 style="text-align: center;">Create a new comment for <%= campground.name %> </h1>
        </header>    

        <form action="/campgrounds/<%=campground.id%>/comments" method="POST" style="width: 30%; margin:25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>

            <a href="/campgrounds/<%=campground.id%>"> Go Back </a>
        </form>

        
    </div>
</div>

<%- include("../partials/footer") %>
